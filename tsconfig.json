{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2017",
        "module": "es6",
        "jsx": "react",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "baseUrl": ".",
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "lib": ["es2015", "esnext"],
        "esModuleInterop": true,
        "declaration": true,
    },
    "files": ["src/index.ts"]
}
